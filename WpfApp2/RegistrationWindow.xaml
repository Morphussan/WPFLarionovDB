<Window x:Class="WpfApp2.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Регистрация" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Логин:"/>
            <TextBox Name="UsernameTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,5"/>
            <TextBlock Text="Подтвердите пароль:"/>
            <PasswordBox Name="ConfirmPasswordBox" Margin="0,0,0,15"/>
            <Button Name="RegisterButton" 
                    Content="Зарегистрироваться" 
                    Click="RegisterButton_Click" 
                    Margin="0,0,0,10"/>
            <Button Name="SwitchToLoginButton" 
                    Content="Уже есть аккаунт? Авторизуйтесь" 
                    Click="SwitchToLoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
